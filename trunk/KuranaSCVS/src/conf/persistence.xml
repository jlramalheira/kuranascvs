<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="UP" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Model.Cliente</class>
    <class>Model.Endereco</class>
    <class>Model.Produto</class>
    <class>Model.Fornecedor</class>
    <class>Model.Servico</class>
    <class>Model.Funcionario</class>
    <class>Model.OrdemDeServico</class>
    <class>Model.Venda</class>
    <class>Model.Compra</class>
    <class>Model.Item</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/kuranaSCVS?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="kuranaSCVS"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="kurana"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
